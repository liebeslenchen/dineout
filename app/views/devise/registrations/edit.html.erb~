<h2>Account bearbeiten</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label "Benutzername" %>
  <%= f.text_field :username %></div>

  <div><%= f.label "E-Mail" %>
  <%= f.email_field :email %></div>

  <div><%= f.label "Password erstellen" %> 
  	<%= f.password_field :password, :autocomplete => "off" %>
  	<i>&nbsp;(freilassen, wenn es nicht geändert werden soll)</i>
  </div>

  <div><%= f.label "Password bestätigen" %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label "Aktuelles Password" %> 
  	<%= f.password_field :current_password %>
	<i>&nbsp;(wir brauchen das aktuelle Passwort zur Bestätigung der Änderungen)</i>
  </div>

  <div><%= f.submit "Ändern" %></div>
<% end %>

<h3>Account löschen</h3>

<p>Unzufrieden? <%= link_to "Account löschen", registration_path(resource_name), :data => { :confirm => "Bist du sicher?" }, :method => :delete %>.</p>

<%= link_to "Zurück", :back %>
