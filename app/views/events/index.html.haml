%h1 Deine Events

%table.table.table-hover
  %tr
    %th Diner
    %th Uhrzeit
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.diner.name
      %td= event.dtime
      %td.icon-list 
        - if can?(:read, event)
          %icon-list = link_to '  Detailansicht', event
      %td.icon-repeat
        - if can?(:update, event)
          = link_to '  Bearbeiten', edit_event_path(event)
      %td.icon-remove-sign
        - if can?(:delete, event)
          = link_to '  Entfernen', event, method: :delete, data: { confirm: 'Are you sure?' }

%br
- if can?(:create, Event)
  = link_to 'Neues Event anlegen', new_event_path, :class => "btn"
