%h1 Deine Events

%table.table.table-hover
  %tr
    %th Diner
    %th Uhrzeit
    %th Teilnehmer
    %th
    %th 
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.diner.name
      %td= event.dtime
      %td= event.users.count
      %td 
        - if can?(:read, event)
          %p.icon-list= link_to '  Detailansicht', event
      %td
        - if can?(:update, event)
          %p.icon-repeat= link_to '  Bearbeiten', edit_event_path(event)
      %td
        - if can?(:delete, event)
          %p.icon-remove-sign= link_to '  Entfernen', event, method: :delete, data: { confirm: 'Are you sure?' }
      %td
        - if current_user != nil 
          %p.icon-share-alt= link_to ' Teilnehmen', event, :action => "participate", :id => @event

%br
- if can?(:create, Event)
  = link_to 'Neues Event anlegen', new_event_path, :class => "btn"
