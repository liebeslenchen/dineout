= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Diner'
    = f.collection_select :diner_id, Diner.all, :id, :name, { selected: @event.diner_id }, { multiple: false }
  .field
    = f.label 'Uhrzeit'
    = f.time_select :dtime
  .actions
    = f.submit 'Speichern'
