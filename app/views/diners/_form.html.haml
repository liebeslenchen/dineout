= form_for @diner do |f|
  - if @diner.errors.any?
    #error_explanation
      %h2= "#{pluralize(@diner.errors.count, "error")} prohibited this diner from being saved:"
      %ul
        - @diner.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :time
    = f.text_area :time
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :urlmaps
    = f.text_field :urlmaps
  .actions
    = f.submit 'Save'
