  - @diners.each do |diner|
    %tr
      %td= diner.name
      %td= diner.street
      %td= diner.city
      - if can?(:read, Diner)
        %td.icon-list= link_to ' Detailansicht', diner
      - if can?(:update, Diner)
        %td.icon-repeat= link_to ' Bearbeiten', edit_diner_path(diner)
      - if can?(:delete, Diner)
        %td.icon-remove-sign= link_to ' Entfernen', diner, method: :delete, data: { confirm: 'Are you sure?' }

